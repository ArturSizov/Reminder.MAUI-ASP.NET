<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Reminder.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Reminder.MAUI.Views"
    xmlns:local1="clr-namespace:Reminder.MAUI">

    <Shell.TitleView>
        <HorizontalStackLayout
            Padding="10">
            <Image Source="people.png" 
                   WidthRequest="35" 
                   HeightRequest="35"/>
            <Label Text="Reminder" 
                   TextColor="Yellow" 
                   FontSize="25"/>
        </HorizontalStackLayout>
    </Shell.TitleView>
    <TabBar>
        <Tab
            Title="Меню"
            Icon="menu.png">
            <ShellContent
                Title="Список"
                Icon="people.png"
            ContentTemplate="{DataTemplate local:PersonsPage}" />
            <ShellContent
                Title="Отёт"
                Icon="image.png" 
            ContentTemplate="{DataTemplate local1:MainPage}" />
        </Tab>
    </TabBar>
</Shell>
