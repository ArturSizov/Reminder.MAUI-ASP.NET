<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             xmlns:vm="clr-namespace:Reminder.ViewModels.PopupViewModels"
             x:Class="Reminder.Views.ViewsPopup.PopupMessage"
             x:DataType="vm:PopupMessageViewModel"
             BackgroundColor="Transparent"
             IsCloseOnBackgroundClick="True"
             Padding="15" 
             VerticalOptions="EndAndExpand">

    <Frame Style="{StaticResource CardView}">
        <VerticalStackLayout Padding="20" 
                             BackgroundColor="#DCDCDC">
            <Label Text="{Binding Text}"
                   FontSize="16"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" 
                   HorizontalTextAlignment="Center"/>
           
        </VerticalStackLayout>
    </Frame>
</mauiPopup:BasePopupPage>